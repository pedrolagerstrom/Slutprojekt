@model Webb_booking.Models.ViewModels.EditBookingViewModel

<h1>Ändra bokning</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <input hidden asp-for="Booking.Id" />
            <div class"form-group">
                <label class="control-lable">Ditt namn</label>
                <input class="form-control" asp-for="Booking.Booker" />
            </div>
            <div class="form-group">
                <label class="control-lable">Fågel</label>
                <select class="form-control" asp-for="Booking.BirdId" asp-items="@(new SelectList(Model.Birds, "Id", "Name"))">
                    <option>Välj fågel</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Från</label>
                <input class="form-control" asp-for="Booking.From" />
            </div>
            <div class="form-group">
                <label class="control-label">Till</label>
                <input class="form-control" asp-for="Booking.To" />
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Spara" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>