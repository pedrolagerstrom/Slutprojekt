@model Booking

<h1>Ta bort en bokning</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteConfirmed" method="post">
            <input hidden asp-for="Id" />
            <div class"form-group">
                <label class="control-lable">Ditt namn</label>
                <input disabled class="form-control" asp-for="Booker" />
            </div>
            <div class="form-group">
                <label class="control-lable">Fågel</label>
                <input disabled class="form-control" asp-for="BirdName" />                
            </div>
            <div class="form-group">
                <label class="control-label">Från</label>
                <input disabled class="form-control" asp-for="From" />
            </div>
            <div class="form-group">
                <label class="control-label">Till</label>
                <input disabled class="form-control" asp-for="To" />
            </div>
            <div>
                <input class="btn btn-danger" type="submit" value="Delete" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>